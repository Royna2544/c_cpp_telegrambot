name: Build TgBot++ (Windows with MSVC)

on:
  push:
    branches:
      - master
  pull_request:
    branches:
      - master
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest
    strategy:
      fail-fast: false
      matrix:
        configuration: [Debug, Release]

    name: "ðŸš§ MSVC ${{ matrix.configuration }} with vcpkg"
    steps:
    - uses: lukka/get-cmake@latest

    - name: 'ðŸ§° Checkout'
      uses: actions/checkout@v4.2.2
      with:
        fetch-depth: 0
    
    - name: Prepare VCPKG
      uses: lukka/run-vcpkg@v11
      with:
        vcpkgJsonGlob: "**/resources/vcpkg.json"
        vcpkgGitCommitId: "435a9415ca61939ee0382f703009c440a8eae273"

    - name: 'ðŸš§ Build TgBot++'
      run: |
        mkdir build
        cd build
        cmake -G "Visual Studio 17 2022" -A x64 -DCMAKE_BUILD_TYPE=${{ matrix.configuration }} -DCMAKE_TOOLCHAIN_FILE=../vcpkg/scripts/buildsystems/vcpkg.cmake ..
        cmake --build . --config ${{ matrix.configuration }} -- /m